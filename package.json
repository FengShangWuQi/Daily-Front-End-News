{
	"private": true,
	"name": "daily-front-end-news",
	"description": "前端每日前沿资讯推送",
	"author": "fengshangwuqi <fengshangwuqi@gmail.com>",
	"scripts": {
		"check": "npm-check -u -E",
		"tsc": "tsc --noEmit",
		"format": "prettier --write '**/*.{ts,json,md}'",
		"daily": "ts-node ./scripts/${DAILY_SCRIPT}.ts",
		"start": "ts-node ./scripts/index.ts"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run tsc",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"**/*.{ts,md,json}": [
			"prettier --write",
			"git add"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "8.2.0",
		"@commitlint/config-conventional": "8.2.0",
		"@types/config": "0.0.36",
		"@types/cross-spawn": "6.0.1",
		"@types/fs-extra": "8.0.1",
		"@types/inquirer": "6.5.0",
		"@types/request": "2.48.4",
		"chalk": "3.0.0",
		"cloudinary": "1.18.1",
		"config": "3.2.4",
		"cross-spawn": "7.0.1",
		"dumper.js": "1.3.1",
		"fs-extra": "8.1.0",
		"husky": "3.1.0",
		"inquirer": "7.0.1",
		"lint-staged": "9.5.0",
		"npm-check": "5.9.0",
		"prettier": "1.19.1",
		"pretty-error": "2.1.1",
		"request": "2.88.0",
		"ts-node": "8.5.4",
		"typescript": "3.7.4"
	},
	"license": "MIT"
}
