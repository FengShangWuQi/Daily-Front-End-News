{
	"private": true,
	"name": "daily-front-end-news",
	"description": "前端每日前沿资讯推送",
	"author": "fengshangwuqi <fengshangwuqi@gmail.com>",
	"lint-staged": {
		"**/*.{js,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"scripts": {
		"format": "prettier --write '**/*.{js,json,md}'",
		"daily": "ts-node ./scripts/${DAILY_SCRIPT}.ts",
		"start": "ts-node ./scripts/index.ts",
		"precommit": "lint-staged",
		"commitmsg": "commitlint -x @commitlint/config-conventional -e $GIT_PARAMS"
	},
	"devDependencies": {
		"@commitlint/cli": "^7.0.0",
		"@commitlint/config-conventional": "^7.0.1",
		"@types/config": "^0.0.34",
		"@types/cross-spawn": "^6.0.0",
		"@types/fs-extra": "^5.0.4",
		"@types/inquirer": "^0.0.43",
		"@types/request": "^2.47.1",
		"chalk": "^2.4.1",
		"cloudinary": "^1.11.0",
		"config": "^2.0.1",
		"cross-spawn": "^6.0.5",
		"dumper.js": "^1.1.1",
		"fs-extra": "^7.0.0",
		"husky": "^0.14.3",
		"inquirer": "^6.2.0",
		"lint-staged": "^7.2.0",
		"prettier": "^1.14.2",
		"pretty-error": "^2.1.1",
		"request": "^2.88.0",
		"ts-node": "^7.0.1",
		"typescript": "^3.1.1"
	},
	"license": "MIT"
}
